<div class="devise-page">
  <h2><%= render 'devise/shared/title', default_message: 'Welcome back' %></h2>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.email_field :email, placeholder: 'Email', autofocus: true, class: 'form-control' %>
          <br>
        </div>

        <div class="field">
          <%= f.password_field :password, placeholder: 'Password', autocomplete: "off", class: 'form-control' %>
          <br>
        </div>

        <div class="row">
          <div class="col-md-7">
            <% if devise_mapping.rememberable? -%>
              <div class="field remember-me">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
          </div>
          <div class="col-md-5">
            <div class="actions">
              <button type="submit" name="commit" class="btn btn-success form-control" data-disable-with="Please wait">
                <%= fa_icon :check, text: 'Log in' %>
              </button>
            </div>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
