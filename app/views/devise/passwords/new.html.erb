<div class="devise-page">
  <h2><%= render 'devise/shared/title', default_message: 'Forgot your password?' %></h2>

  <div class="row">
    <div class="col-md-4 col-md-offset-4">

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: 'Your email', class: 'form-control' %><br />
        </div>

        <div class="row">
          <div class="col-md-12">
            <div class="actions">
              <button type="submit" name="commit" class="btn btn-success form-control" data-disable-with="Please wait">
                <%= fa_icon :'envelope-o', text: 'Send me reset password instructions' %>
              </button>
            </div>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
